        fi
    fi
}

# parse options
while getopts "ehP:U:D:" opt; do
    case $opt in
        D)
            if [[ $OPTARG = -* ]]; then
                echo "Option -D has a invalid argument"
                exit 1
            fi
            DB_NAME="$OPTARG"
        ;;
        P)
            if [[ $OPTARG = -* ]]; then
                echo "Option -P has a invalid argument"
                exit 1
            fi
            DB_PWD="$OPTARG"
        ;;
        U)
            if [[ $OPTARG = -* ]]; then
                echo "Option -U has a invalid argument"
                exit 1
            fi
            DB_USER="$OPTARG"
        ;;
        h)
            renderHelp && exit 0
        ;;
        e)
            DB_PWD_ENCRYPTED="true"
        ;;
        :)
            renderHelp && exit 100
        ;;
    esac
done

shift `expr $OPTIND - 1`
COMMAND="$1"

# parse actions
case $COMMAND in
    delete)
        if [ -n "$DB_NAME" -a -n "$DB_USER" ]; then
            deleteDbUser
            exit "$?"
        fi
    ;;
    set)
        if [ -n "$DB_NAME" -a -n "$DB_PWD" -a -n "$DB_USER" ]; then
            setDbUser
            exit "$?"
        fi
    ;;
    *)
        if [ -n "$DB_NAME" -a -n "$DB_USER" ]; then
            getDbUser
            exit "$?"
        elif [ -n "$DB_NAME" ]; then
            getDbUsers
            exit "$?"
        fi
    ;;
esac

renderHelp
exit 100