RANDFILE = /usr/lib/courier/imapd.rand

[ req ]
default_bits = 1024
encrypt_key = yes
distinguished_name = req_dn
x509_extensions = cert_type
prompt = no
default_md = sha1

[ req_dn ]
#C=country
#ST=state

<% if @city != "" %>
L=<%= @city %>
<% end %>
<% if @organization != "" %>
O=<%= @organization %>
<% end %>
OU=Mail Server
CN=<%= @fqdn %>
<% if @emailAddress != "" %>
emailAddress=<%= @emailAddress %>
<% end %>


[ cert_type ]
nsCertType = server